FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      solidProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solidModel     linearGeometryTotalDisplacement;

linearGeometryTotalDisplacementCoeffs
{
    // Solution algorithm
    //solutionAlgorithm PETScSNES;
    solutionAlgorithm implicitCoupled;

    // PETSc options file used by PETScSNES
    optionsFile petscOptions.ksponly;

    highOrderCoeffs
    {
        highOrderJacobian true;
        highOrderResidual true;

        LRECoeffs
        {
            N 3;
            Nn 20;
            weightFunction radiallySymmetricExponential;
            k 6;
            maxStencilSize 100;
            useQRDecomposition true;
            useGlobalStencils true;
            calcConditionNumber true;
        }
    }

    stabilisation
    {
        type        RhieChow;
        scaleFactor 0.1;
    }
}

