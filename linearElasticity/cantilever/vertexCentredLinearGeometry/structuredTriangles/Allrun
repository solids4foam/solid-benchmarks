#!/bin/bash

# Source tutorial run functions
. $WM_PROJECT_DIR/bin/tools/RunFunctions

# Source solids4Foam scripts
source solids4FoamScripts.sh

SUFFIX="vertex"
BASE="base"

if [[ -d "${SUFFIX}.1" ]]
then
    echo "Case ${SUFFIX}.1 already exists: please remove it"; echo
    exit 1;
fi

# Run cases
for i in `seq 1 5`;
do
    CASE="${SUFFIX}.$i"
    echo "Running ${CASE}"

    # Copy template case
    cp -r "${BASE}" "${CASE}"

    # Enter the case
    cd "${CASE}"

    # Set the mesh spacing
    DX=$(echo "scale=10; 0.1/(2^(${i}-1))" | bc)
    sed -i "s/dx = 0.01;/dx = ${DX};/g" cantilever.geo

    # Create the mesh
    solids4Foam::runApplication gmsh -3 -format msh2 cantilever.geo
    solids4Foam::runApplication gmshToFoam cantilever.msh
    solids4Foam::runApplication changeDictionary

    # Run the solver
    export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$FOAM_LIBBIN:$FOAM_USER_LIBBIN:$PYBIND11_LIB_DIR
    solids4Foam::runApplication solids4Foam

    # Navigate back to the parent directory
    cd ..
done

# Extract the results
echo "Running Allpost"
./Allpost
